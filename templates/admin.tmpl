{{template "_header.tmpl" . -}}
<header>
<h2 class="post-editor__title">Manage Posts</h2>
<a class="new-post-button" href="{{$.Urls.LinkToPostEditorPage nil}}">New post</a>
</header>
<table class="post-table">
{{range .posts -}}
<tr>
<td class="post-table__column post-table--title-width"><a href="{{$.Urls.LinkToPostPage .}}">{{.Title}}</a></td>
<td class="post-table__column post-table--created-at-width">{{.Date | ShowTime}}</td>
<td class="post-table__column post-table--control-column"><a href="{{$.Urls.LinkToPostEditorPage .}}">Edit</a> | Delete</td>
</tr>
{{end -}}
</table>
{{template "_footer.tmpl" . -}}
